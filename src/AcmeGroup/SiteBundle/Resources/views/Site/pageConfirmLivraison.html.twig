{% extends "AcmeGroupSiteBundle:Site:index.html.twig" %}
{% block body_container %}
<!-- contenu site-->   
<div id="container_site">  
	<!-- page accueil-->
	<div id="container_principal_generique" class="container">
		<br />
		{% if facture is not null %}
		<div class="well well-lg">
			<h1>Vous avez confirmé la réception de votre commande, nous vous en remercions</h1>
			<p>Merci de votre confiance et à très bientôt sur notre site</p>
		</div>
		{% else %}
		<div class="alert alert-danger alert-dismissible" role="alert">
			<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
			<p><strong>Une erreur est survenue</strong> la référence de votre facture n'existe pas dans notre base de données.</p>
		</div>
		{% endif %}
	</div>
</div>
{% endblock %}



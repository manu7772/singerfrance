<div id="footer_haut">
	<a href="{{ url('acme_site_recherchemagasin') }}">
		<div class="footer_search" style="cursor: pointer;">
			<div class="recherche_magasin">
				<h2>Recherchez un magasin</h2>
				<form method="POST" action="{{ url('acme_site_recherchemagasin') }}">
					<input type="text" name="rechmag" value="" title="Indiquez ville, département ou code postal" />
					<div class="btn_recherche">
						<input type="submit" value="OK" />
					</div>
				</form>
			</div>

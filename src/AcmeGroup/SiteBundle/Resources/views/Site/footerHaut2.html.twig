	<!-- encart pub/distribution-->
	<div class="footer_encart">
		<h2>Les réseaux sociaux Singer</h2>
		<ul class="resosociaux">
			{% for key,reso in app.session.get('version').resosociaux %}
			<li class="{{ key }}">
				<a href="{{ reso }}" class="URLext" title="Rejoingnez-nous sur {{ key }}"></a>
			</li>
			{% endfor %}
		</ul>
		<h2>Les partenaires Singer</h2>
		<ul class="linkspartenaires">
			{% for key,part in partenaires %}
			<li class="parten{{ part.niveau }}">
				<a href="{{ part.url }}" class="URLext" title="{{ part.accroche }}">
					<span>{{ part.nom }}</span>
				</a>
			</li>
			{% endfor %}
